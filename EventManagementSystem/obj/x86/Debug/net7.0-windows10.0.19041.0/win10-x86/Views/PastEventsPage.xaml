<Page
    x:Class="EventManagementSystem.Views.PastEventsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
		<!-- Header -->
		<StackPanel Background="#FF1E90FF" Padding="20" Margin="0 0 0 20">
			<TextBlock Text="Past Events Page" FontSize="24" FontWeight="Bold" Foreground="White" />
		</StackPanel>
		<StackPanel Background="#FF1E90FF" Padding="20" Margin="0 0 0 20">
			<TextBlock Text="View Past Event Details" FontSize="16" Foreground="White" />
		</StackPanel>

		<!-- Main Content -->
		<ScrollViewer Margin="20">
			<StackPanel>


				

				<!-- Display Past Events -->
				<StackPanel x:ConnectionId='3' x:Name="PastEvents" Margin="0 40 0 20">
					<TextBlock Text="Past Events" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" />

					<!-- Birthday Celebration -->
					<ListViewItem>
						<StackPanel Margin="0 0 0 20">
							<TextBlock Text="Birthday Celebration" FontSize="30" FontWeight="Bold" />
							<Image Source="/Assets/birthday.jpg" Stretch="UniformToFill"/>
							<TextBlock Text="Date: May 15, 2023" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Time: 2:00 PM - 6:00 PM" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Location: Karachi, Pakistan" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Description: A joyous birthday party was organized in Karachi, Pakistan. It marked another year of life with excitement, surrounded by friends and family." TextWrapping="Wrap" Margin="0 10 0 0" />
							<Button Content="View Details" Width="150" Background="#0a72cc" Foreground="White" Margin="0 10 0 0" />
						</StackPanel>
					</ListViewItem>

					<!-- Summer Music Festival -->
					<ListViewItem>
						<StackPanel Margin="0 0 0 20">
							<TextBlock Text="Summer Music Festival" FontSize="30" FontWeight="Bold" />
							<Image Source="/Assets/festival.jpg" Stretch="UniformToFill"/>
							<TextBlock Text="Date: July 15, 2023" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Time: 2:00 PM - 10:00 PM" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Location: Central Park, New York City" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Description: Join us for an unforgettable day of music, food, and fun at the Summer Music Festival in the heart of New York City's Central Park. This year's festival features an incredible lineup of artists from various genres, food stalls with local delicacies, and activities for the whole family. Don't miss out on this summer celebration! Buy your tickets now." TextWrapping="Wrap" Margin="0 10 0 0" />
							<Button Content="View Details" Width="150" Background="#0a72cc" Foreground="White" Margin="0 10 0 0" />
						</StackPanel>
					</ListViewItem>

					<!-- Ceremony -->
					<ListViewItem>
						<StackPanel Margin="0 0 0 20">
							<TextBlock Text="Ceremony" FontSize="30" FontWeight="Bold" />
							<Image Source="/Assets/ceremony.jpg" Stretch="UniformToFill"/>
							<TextBlock Text="Date: May 5, 2023" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Time: 4:00 PM - 6:00 PM" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Location: Karachi, Pakistan" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Description: A significant ceremony was held in Karachi, Pakistan. This event included various cultural and social rituals, making it a memorable and meaningful occasion." TextWrapping="Wrap" Margin="0 10 0 0" />
							<Button Content="View Details" Width="150" Background="#0a72cc" Foreground="White" Margin="0 10 0 0" />
						</StackPanel>
					</ListViewItem>

					<!-- Marriage -->
					<ListViewItem>
						<StackPanel Margin="0 0 0 20">
							<TextBlock Text="Marriage" FontSize="30" FontWeight="Bold" />
							<Image Source="/Assets/marriage.jpg" Stretch="UniformToFill"/>
							<TextBlock Text="Date: October 20, 2022" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Time: 3:00 PM - 9:00 PM" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Location: Lahore, Pakistan" FontSize="16" Margin="0 10 0 0" />
							<TextBlock Text="Description: A beautiful marriage ceremony took place in Lahore, Pakistan. It was a heartwarming celebration of love and commitment, uniting two people in the presence of family and friends." TextWrapping="Wrap" Margin="0 10 0 0" />
							<Button Content="View Details" Width="150" Background="#0a72cc" Foreground="White" Margin="0 10 0 0" />
						</StackPanel>
					</ListViewItem>
				</StackPanel>


			</StackPanel>
		</ScrollViewer>
    </Grid>
</Page>

